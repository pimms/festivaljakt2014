<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:background="@color/default_background"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingLeft="20dp"
	android:paddingRight="20dp"
	android:paddingTop="20dp">
	
	<TextView
		android:text="Skann brikken på armbåndet ditt og skriv inn brukernavn for å registrere deg."
		android:textColor="#222222"
		android:textSize="18sp"
		android:gravity="center"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>


	<TextView
		android:text="Din chip-ID:"
		android:gravity="center"
		android:layout_marginTop="20dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>
	<TextView
		android:id="@+id/register_text_id"
		android:text="xxxx-xxxx-xxxx-xxxx"
		android:textStyle="italic"
		android:textSize="22sp"
		android:gravity="center"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:typeface="monospace"/>


	<TextView
		android:text="Ditt brukernavn:"
		android:gravity="center"
		android:layout_marginTop="20dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>
	<EditText
		android:id="@+id/register_edit_name"
		android:gravity="center"
		android:inputType="textPersonName"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		android:paddingBottom="40dp"
		android:gravity="bottom">
		<View
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="0.2"/>
		<Button
			android:id="@+id/register_button_register"
			android:text="Registrer"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="0.6"/>
		<View
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="0.2"/>
	</LinearLayout>
</LinearLayout>